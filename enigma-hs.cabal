  ghc-options:         -Wall
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  hs-source-dirs:      tests
  build-depends:       base >=4.6,
                       enigma-hs,
                       QuickCheck
  default-language:    Haskell2010


