  default-language:    Haskell2010

executable enigma-hs
  ghc-options:         -Wall
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.6,
                       enigma-hs
  hs-source-dirs:      bin
  default-language:    Haskell2010

